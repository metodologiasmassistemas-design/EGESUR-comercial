# Puerto del servidor
PORT=3000

# API Key para autenticación
API_KEY=tu_api_key_secreta_aqui

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=id_de_tu_carpeta_de_google_drive

# Google Service Account (contenido del archivo JSON en una línea)
# O bien, usa GOOGLE_APPLICATION_CREDENTIALS con la ruta al archivo JSON
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Alternativa: ruta al archivo de credenciales
# GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json

# Production Environment Variables
# Copy this file to .env.production for production deployment

# Server Configuration
PORT=3000
NODE_ENV=production

# API Security
API_KEY=your_production_api_key_here

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# OAuth 2.0 Configuration (Option 1 - Recommended for development)
# Get this from config/oauth-credentials.json (minified to one line)
# OAUTH_CREDENTIALS_JSON={"installed":{"client_id":"...","client_secret":"...","redirect_uris":["..."]}}

# OAuth Token (if pre-authenticated)
# Get this from config/oauth-token.json after first auth
# OAUTH_TOKEN_JSON={"access_token":"...","refresh_token":"...","scope":"...","token_type":"Bearer","expiry_date":1234567890}

# Service Account Configuration (Option 2 - Recommended for production)
# Get this from config/google-credentials.json (minified to one line)
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Note: Use EITHER OAuth OR Service Account, not both
